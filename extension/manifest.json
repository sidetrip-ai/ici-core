{
  "manifest_version": 3,
  "name": "Sidetrip DeepContext",
  "version": "1.0",
  "description": "Enhances ChatGPT prompts with personalized context",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "scripting",
    "tabs"
  ]
} 